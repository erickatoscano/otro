<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titulos">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">-25dp</item>
        <item name="android:fontFamily">@font/cabana</item>
    </style>

    <style name="img_principal">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="subtitulos">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">45dp</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/cabana</item>
    </style>
    <style name="sub">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:fontFamily">@font/cabana</item>
    </style>


    <style name="tienda_sub">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="precio">
        <item name="android:textSize">40dp</item>
        <item name="android:fontFamily">@font/cabana</item>
    </style>
    <style name="imagen_tienda">
                <item name="android:layout_columnSpan">2</item>
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">130dp</item>
    </style>


    <style name="imagen_act">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
    </style>



    <style name="titulos_act">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>


        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="descripcion_act">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
    </style>




</resources>
